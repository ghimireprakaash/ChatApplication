<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/contact_card_state_background"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/contactUserImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="22dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/contactProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/contact_image_view_shape"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:contentDescription="@string/user_profile"/>

        <TextView
            android:id="@+id/contactNameFirstLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="12sp"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/contactUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:textColor="@color/colorBlack"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintTop_toTopOf="@+id/contactUserImage"
        app:layout_constraintStart_toEndOf="@+id/contactUserImage"
        app:layout_constraintBottom_toBottomOf="@+id/contactUserImage"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/contactNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Number"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@+id/contactUserName"
        app:layout_constraintStart_toStartOf="@+id/contactUserName"
        app:layout_constraintBottom_toBottomOf="@+id/contactUserImage"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/inviteCard"
        android:layout_width="70dp"
        android:layout_height="30dp"
        app:cardBackgroundColor="@color/colorLightWhite"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toTopOf="@id/contactUserName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/contactNumber"
        android:layout_marginEnd="15dp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invite"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/colorLightPurple"
                android:visibility="visible"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>