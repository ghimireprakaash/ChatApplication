<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/Card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_24"
                android:layout_gravity="end"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/profileImageLayout"
                android:layout_width="120dp"
                android:layout_height="115dp"
                app:cardCornerRadius="46dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/state_pressed_on_circle_image_view"
                        android:scaleType="centerCrop"
                        android:layout_centerInParent="true"
                        android:contentDescription="@string/user_profile"/>

                    <TextView
                        android:id="@+id/camera_icon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/camera"
                        android:layout_centerInParent="true"
                        android:visibility="visible"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorBlack"
                android:padding="5dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/profileContactNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:padding="5dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/profileDOB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:padding="5dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Card2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toBottomOf="@+id/Card1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/settingsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textSize="16sp"
                android:textAlignment="gravity"
                android:gravity="start|center"
                android:padding="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:drawableStartCompat="@drawable/settings_30"
                android:drawablePadding="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/addContactText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/addContacts"
                android:textSize="16sp"
                android:textAlignment="gravity"
                android:gravity="start|center"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@+id/settingsText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/aboutText"
                app:drawableStartCompat="@drawable/ic_baseline_person_add"
                android:drawablePadding="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/aboutText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about"
                android:textSize="16sp"
                android:textAlignment="gravity"
                android:gravity="start|center"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@+id/addContactText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:drawableStartCompat="@drawable/info_30"
                android:drawablePadding="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/test1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test"
                android:textSize="16sp"
                android:textAlignment="gravity"
                android:gravity="start|center"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@+id/aboutText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:drawableStartCompat="@drawable/info_30"
                android:drawablePadding="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/test2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test"
                android:textSize="16sp"
                android:textAlignment="gravity"
                android:gravity="start|center"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@+id/test1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:drawableStartCompat="@drawable/info_30"
                android:drawablePadding="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/test3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test"
                android:textSize="16sp"
                android:textAlignment="gravity"
                android:gravity="start|center"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@+id/test2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:drawableStartCompat="@drawable/info_30"
                android:drawablePadding="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/test4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test"
                android:textSize="16sp"
                android:textAlignment="gravity"
                android:gravity="start|center"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@+id/test3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:drawableStartCompat="@drawable/info_30"
                android:drawablePadding="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/test5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test"
                android:textSize="16sp"
                android:textAlignment="gravity"
                android:gravity="start|center"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@+id/test4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:drawableStartCompat="@drawable/info_30"
                android:drawablePadding="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>