<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dialogTxt1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/IsThisYourPhNumber"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/phoneNumberText"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/phoneNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/respectiveContactNumber"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/dialogTxt1"
            app:layout_constraintStart_toStartOf="@+id/dialogTxt1"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/dialogTxt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/codeSent"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumberText"
            app:layout_constraintStart_toStartOf="@+id/dialogTxt1"
            app:layout_constraintEnd_toEndOf="@+id/dialogTxt1"
            android:layout_marginTop="20dp"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/dialogEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editOption"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/dialogTxt3"
            app:layout_constraintEnd_toStartOf="@+id/dialogYes"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="30dp"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/dialogYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yesOption"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorLightPurple"
            app:layout_constraintTop_toBottomOf="@id/dialogTxt3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="33dp"
            android:padding="2dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>