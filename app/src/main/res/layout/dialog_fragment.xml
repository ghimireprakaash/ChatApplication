<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="200dp"
    app:cardElevation="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dialogTxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Is this your phone number?"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/phoneNumberText"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"/>

        <TextView
            android:id="@+id/phoneNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text2"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/dialogTxt1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"/>

        <TextView
            android:id="@+id/dialogTxt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A code will be sent to this number."
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumberText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/dialogTxt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/dialogTxt3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="80dp"/>

        <TextView
            android:id="@+id/dialogTxt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YES"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/dialogTxt3"
            app:layout_constraintStart_toEndOf="@id/dialogTxt4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>